# ============================================
# Docker Compose Environment Variables
# ============================================
# Copy this file to .env and update the values for your environment
# cp .env.docker.example .env

# ============================================
# Node Environment
# ============================================
NODE_ENV=production
API_PORT=3000

# ============================================
# PostgreSQL Database
# ============================================
POSTGRES_USER=rosterhub
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=rosterhub
POSTGRES_PORT=5432

# ============================================
# Redis
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_me_in_production

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=change_me_in_production_use_strong_random_string
JWT_EXPIRATION=1h

# ============================================
# API Security
# ============================================
API_KEY_ENABLED=true
IP_WHITELIST_ENABLED=false
RATE_LIMIT_ENABLED=true
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ============================================
# Audit Logging
# ============================================
AUDIT_LOG_ENABLED=true

# ============================================
# CSV Processing
# ============================================
CSV_UPLOAD_MAX_SIZE=52428800
CSV_BATCH_SIZE=1000

# ============================================
# OneRoster Configuration
# ============================================
ONEROSTER_VERSION=1.2
JAPAN_PROFILE_VERSION=1.2.2

# ============================================
# Nginx (Production Only)
# ============================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ============================================
# Adminer (Development Only)
# ============================================
ADMINER_PORT=8080
