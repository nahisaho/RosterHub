{
  "dashboard": {
    "title": "OneRoster API - Overview Dashboard",
    "tags": ["oneroster", "api", "overview"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (req/sec)",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(oneroster_http_requests_total[1m])",
            "legendFormat": "{{method}} {{endpoint}} ({{status}})",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          }
        ]
      },
      {
        "id": 2,
        "title": "Response Time (p95)",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(oneroster_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{endpoint}} - p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(oneroster_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{endpoint}} - p99",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate (%)",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum(rate(oneroster_http_requests_total{status=~\"5..\"}[5m])) / sum(rate(oneroster_http_requests_total[5m])) * 100",
            "legendFormat": "5xx Error Rate",
            "refId": "A"
          },
          {
            "expr": "sum(rate(oneroster_http_requests_total{status=~\"4..\"}[5m])) / sum(rate(oneroster_http_requests_total[5m])) * 100",
            "legendFormat": "4xx Error Rate",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "Error Rate"
          }
        ]
      },
      {
        "id": 4,
        "title": "Total Requests (by endpoint)",
        "type": "stat",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(oneroster_http_requests_total)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background"
        }
      },
      {
        "id": 5,
        "title": "Active Database Connections",
        "type": "stat",
        "gridPos": {
          "x": 18,
          "y": 8,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "oneroster_db_connections{state=\"active\"}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Entity Operations (ops/sec)",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 16,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(oneroster_entity_operations_total[1m])",
            "legendFormat": "{{entity}} - {{operation}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "CSV Operations (ops/sec)",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 16,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(oneroster_csv_import_total[1m])",
            "legendFormat": "Import - {{entity}} ({{status}})",
            "refId": "A"
          },
          {
            "expr": "rate(oneroster_csv_export_total[1m])",
            "legendFormat": "Export - {{entity}} ({{status}})",
            "refId": "B"
          }
        ]
      },
      {
        "id": 8,
        "title": "Cache Hit Rate",
        "type": "gauge",
        "gridPos": {
          "x": 0,
          "y": 24,
          "w": 6,
          "h": 6
        },
        "targets": [
          {
            "expr": "oneroster_cache_hit_rate",
            "refId": "A"
          }
        ],
        "options": {
          "minValue": 0,
          "maxValue": 1,
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 0.5, "color": "yellow" },
                { "value": 0.8, "color": "green" }
              ]
            },
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 9,
        "title": "Database Query Duration (p95)",
        "type": "graph",
        "gridPos": {
          "x": 6,
          "y": 24,
          "w": 18,
          "h": 6
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(oneroster_db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "{{operation}} - {{table}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "title": "Error Breakdown",
        "type": "piechart",
        "gridPos": {
          "x": 0,
          "y": 30,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by (type) (oneroster_errors_total)",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 11,
        "title": "Japan Profile Validation Success Rate",
        "type": "stat",
        "gridPos": {
          "x": 12,
          "y": 30,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum(oneroster_japan_profile_validations_total{result=\"pass\"}) / sum(oneroster_japan_profile_validations_total) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 90, "color": "yellow" },
                { "value": 95, "color": "green" }
              ]
            }
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "endpoint",
          "type": "query",
          "query": "label_values(oneroster_http_requests_total, endpoint)",
          "multi": true,
          "includeAll": true
        },
        {
          "name": "entity",
          "type": "query",
          "query": "label_values(oneroster_entity_operations_total, entity)",
          "multi": true,
          "includeAll": true
        }
      ]
    }
  }
}
